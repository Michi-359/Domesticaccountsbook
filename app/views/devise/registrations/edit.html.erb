<%= render "shared/partial" %>
<main class="form-signin w-50 m-auto">
  <div class= "card text-center">
    <div class="mb-3 mt-4">
      <h4>ユーザー情報編集</h4>
    </div>
    <div class= "card-body">
    <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
      <div class="mb-3 mt-4">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="mb-3 mt-4">
        <%= f.label :name %><br>
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>

      <div class="mb-3 mt-4">
        <%= f.label :password %><i>(6文字以上)</i><br/><i>(変更しない場合は空欄可)</i><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="mb-3 mt-4">
        <%= f.label :password_confirmation %> <i>(同上)</i><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="mb-3 mt-4">
        <%= f.label :current_password %> <i>(入力必須)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Update", class:"btn btn-primary mb-3 mt-2 w-100" %>
      </div>

      <div class="actions">
        <%= link_to "Back", :back, class:"btn btn-primary mb-3 mt-2 w-100" %>
      </div>
    <% end %>
    </div>
  </div>
</main>

<%= render "shared/partial" %>
<div class= "bg-success-subtle">
  <h2 class="text-center">投稿の編集</h2>
  <div class="w-75 m-auto">
    <%= form_with model: @post, local: true do |f| %>
    <div class="card m-3">
      <div class="card-body m-4">
        <div><%= f.label :カテゴリー %><br><%= f.select :category, [['食費'], ['住居費'], ['水道光熱費'], ['家具・家事用品費'], ['被服・履物費'], ['交通費'], ['通信費'], ['教養娯楽費'], ['交際費'], ['その他の支出']] %></div>
        <p><%= f.label :本文 %><br><%= f.text_area :body, class: "form-control", rows: 3 %></p>  
        <div><%= f.submit "編集完了", class:"btn btn-primary m-2 w-50" %></div>
        <div><%= link_to "戻る", :back, class:"btn btn-primary m-2 w-50" %></div>
      </div>
    </div>
    <% end %>
  </div>
</div>

<%= render "shared/partial" %>
<div class= "bg-success-subtle">
  <h2 class="text-center">目標の編集</h2>
  <div class="w-75 m-auto">
    <%= form_with model: @progress, local: true do |f| %>
    <div class="card text-center m-3">
      <div class="card-body m-4">
        <div><%= f.label :purpose_of_saving ,"貯蓄の目的" %></div>
        <div><%= f.text_field :purpose_of_saving %></div>
        <div><%= f.label :monthly_savings ,"毎月貯める金額" %></div>
        <div><%= f.text_field :monthly_savings %></div>
        <div><%= f.label :months ,"貯めた月数" %></div>
        <div><%= f.text_field :months %></div>
        <div><%= f.label :special_reserve ,"毎月貯める金額の他に追加した金額" %></div>
        <div><%= f.text_field :special_reserve %></div>
        <div><%= f.label :target_amount ,"目標金額" %></div>
        <div><%= f.text_field :target_amount %></div>
        <div><%= f.submit "編集完了", class:"btn btn-primary m-2 w-50" %></div>
        <div><%= link_to "戻る", :back, class:"btn btn-primary m-2 w-50" %></div>
      </div>
    </div>
    <% end %>
  </div>
</div>
